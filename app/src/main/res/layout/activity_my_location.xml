<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <!-- Thanh icon thời tiết cuộn ngang -->
    <HorizontalScrollView
        android:id="@+id/topChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:background="@android:color/transparent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Chip 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_big_rain_drops" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rain"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Chip 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_big_snow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drizz"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text"/>
            </LinearLayout>

            <!-- Chip 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_zaps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thunder"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text"/>
            </LinearLayout>

            <!-- Chip 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_moon_cloud_fast_wind" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light rain"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text"/>
            </LinearLayout>

            <!-- Chip 5 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_mid_snow_fast_winds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moon cloud"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Khối nội dung chính -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_below="@id/topChips"
        android:layout_above="@id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- Tiêu đề thành phố + ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/textTitle"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Icon mây mưa lớn -->
        <ImageView
            android:id="@+id/mainIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_moon_cloud_fast_wind"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"/>

        <!-- Nhiệt độ lớn -->
        <TextView
            android:id="@+id/tvBigTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text"
            android:textSize="64sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.06" />

        <!-- 3 chỉ số: Temp/Humidity/Wind -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp"
            android:paddingHorizontal="8dp">

            <!-- Temp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp"
                    android:textColor="@color/text"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvSmallTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidy"
                    android:textColor="@color/text"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <!-- Wind -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:textColor="@color/text"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Today + View report -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="2dp">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View report"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- Dải thẻ dự báo cuộn ngang -->
        <HorizontalScrollView
            android:id="@+id/forecastScroll"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:overScrollMode="never"
            android:fillViewport="false"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/llLayoutForecastScroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="6dp">

